<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ns_primary</item>
        <item name="colorAccent">@color/ns_accent</item>
        <item name="android:statusBarColor">@color/appBackgroundColor</item>
        <item name="android:navigationBarColor">@color/appBackgroundColor</item>
        <item name="android:backgroundTint">@color/appBackgroundColor</item>
        <item name="android:windowLightNavigationBar">@bool/uiLightMode</item>
        <item name="android:windowLightStatusBar">@bool/uiLightMode</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="AppThemeDark" parent="AppThemeBase">
        <item name="android:backgroundTint">@color/appBackgroundDarkColor</item>
    </style>

    <style name="LaunchScreenThemeBase" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="LaunchScreenTheme" parent="LaunchScreenThemeBase"/>
    <style name="NativeScriptToolbarStyleBase" parent="Widget.AppCompat.Toolbar"/>
    <style name="NativeScriptToolbarStyle" parent="NativeScriptToolbarStyleBase"/>
</resources>
